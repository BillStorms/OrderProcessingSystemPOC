    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "ConnectionStrings": {
    // For local development: Use User Secrets (dotnet user-secrets set "ConnectionStrings:OrderDatabase" "<your-connection-string>")
